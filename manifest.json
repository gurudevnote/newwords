{
  "name": "learn new words",
  "description": "save selected text to local storage",
  "version": "0.0.1",
  "permissions": ["contextMenus", "tabs", "storage", "*://*/*"],
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "icons": {
    "16": "icon-bitty.png",
    "48": "icon-small.png",
    "128": "icon-large.png"
  },
  "browser_action": {
    "default_icon" : "icon-small.png",
    "default_title" : "see list of selected texts in local storage"
  },
  "options_page": "options.html",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["highlightword.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com https://*.firebaseio.com; object-src 'self'"
}